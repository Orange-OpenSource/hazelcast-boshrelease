<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

	<!-- refer to http://logback.qos.ch/manual/appenders.html -->
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>
				%d{HH:mm:ss.SSS} [%thread] %-5level %logger{0} - %msg%n
			</pattern>
		</encoder>
	</appender>

	<logger name="com.hazelcast" level="${config.logger.level}" />
	<logger name="org.bitsofinfo.hazelcast.discovery" level="DEBUG" />	
	<logger name="org.apache.cxf" level="DEBUG" />	
        <logger name="com.orbitz.consul" level="DEBUG" />
	<root level="DEBUG">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>
